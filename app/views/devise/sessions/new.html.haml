%head
  %title=t "title.#{params[:action]}"
  %meta{ :name => "description", :content => t( "meta.description.#{params[:action]}" ) }
  %meta{ :name => "keywords", :content => t( "meta.subject" ) }
  %meta{ :name => "robots", :content => "Index, Follow" }
  %meta{ :name => "author", :content => "jmjurado23" }
  %meta{ :name => "language", :content => "Spanish" }
  %meta{:content => "width=device-width", :name => "viewport"}
  %meta{:charset => "utf-8"}
  %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
  %body
    .intro-header
      .container
        .col
          .col-lg-8
            %h1
              =t 'wanab.home.title'
            %h3
              =t 'wanab.home.subtitle'
        .col#sign_in_form_view
          .col-lg-4
            .row
              %h2
                =t 'wanab.registration.sign_in_title'
            .row
              = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
                = devise_error_messages!
                %div
                  = f.email_field :email, :autofocus => true, class: 'form-control',
                    placeholder: I18n.t( 'wanab.registration.placeholder_email' )
                %br/
                %div
                  = f.password_field :password, class: 'form-control',
                    placeholder: I18n.t( 'wanab.registration.placeholder_password' )
                %br/
                - if devise_mapping.rememberable?
                  %div
                    = f.check_box :remember_me
                    =t 'wanab.registration.remember_me'
                    %a.btn.btn-primary.pull-right#sign_in_button
                      =t 'wanab.registration.sign_in'
                    %a.btn.btn-primary.pull-right#register_button
                      =t 'wanab.registration.register'
            .row
              %br/
              = render "devise/shared/links"

        .col#registration_form_view{ style: 'display:none' }
          .col-lg-4
            .row
              %h2
                =t 'wanab.registration.register_title'
            .row
              = form_for( resource, :as => resource_name, :url => registration_path( resource_name ) ) do |f|
                = devise_error_messages!
                %div
                  = f.email_field :email, :autofocus => true, class: 'form-control',
                    placeholder: I18n.t( 'wanab.registration.placeholder_email' )
                %br/
                %div
                  = f.password_field :password, class: 'form-control',
                    placeholder: I18n.t( 'wanab.registration.placeholder_password' )
                %br/
                %div
                  = f.password_field :password_confirmation, class: 'form-control',
                    placeholder: I18n.t( 'wanab.registration.placeholder_re_password' )
                %br/
                %div
                  %a.btn.btn-primary.pull-right#registration_button
                    =t 'wanab.actions.confirm'
                  %a.btn.btn-primary.pull-right#return_button
                    =t 'wanab.actions.return'

